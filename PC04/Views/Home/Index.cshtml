@model List<Foto>

<h1>Lista de Fotos</h1>

<table class="table table-dark border">
      <tr>
          <th>Id</th>
          <th>Titulo</th>
          <th>Foto</th>
          <th>Fecha</th>
      </tr>
      @foreach (var item in Model)
      {
          <tr>
              <td>@item.Id</td>
              <td><a href="/Home/Imagen/@item.Id">@item.Titulo</a> </td>
              <td><a href="/Home/Imagen/@item.Id"><img src="@item.URL"></a></td>
              <td>@item.Fecha</td>
          </tr>
      }
      @if (Model.Count == 0) {
          <tr>
              <td colspan="12" class="text-center">
                  <h3> Aun no existen fotos registradas</h3>
              </td>
          </tr>
      }
  </table>